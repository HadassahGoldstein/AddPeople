@using HWMultipleRows.Data
@model PeopleViewModel
@if (Model.Alert != null)
{    <div class="row">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @Model.Alert
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
<div class="row">
    <a href="/Home/AddPeople" class="btn btn-success">Add People</a>
</div>
<div class="row mt-2">
    <div class="col-md-8">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Person p in Model.People)
                {
                    <tr>
                        <td>
                            @p.FirstName
                        </td>
                        <td>
                            @p.LastName
                        </td>
                        <td>
                            @p.Age
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
